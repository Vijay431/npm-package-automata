{
  "name": "npm-package-automata",
  "version": "1.0.0-alpha.1",
  "description": "To automate the packager versioning",
  "readme": "Testing the automation of version releasing",
  "license": "ISC",
  "main": "index.js",
  "author": {
    "name": "Vijay Gangatharan",
    "email": "vijayanand431@gmail.com"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "blog",
    "semver",
    "technical blog",
    "version"
  ],
  "files": [
    "*.md",
    "index.js",
    "package.json"
  ],
  "eslintConfig": {
    "plugins": [
      "prettier"
    ],
    "extends": [
      "standard",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "warn",
      "no-console": "warn"
    }
  },
  "prettier": {
    "printWidth": 140,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "requirePragma": true,
    "insertPragma": true,
    "endOfLine": "lf"
  },
  "devDependencies": {
    "eslint": "^8.40.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "standard": "^17.0.0"
  },
  "scripts": {
    "format": "npx lint-staged"
  }
}
